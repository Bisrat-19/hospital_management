# Django Core
DJANGO_SECRET_KEY=replace-with-strong-random-string
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# Database (choose either DATABASE_URL or individual fields)
# DATABASE_URL format: postgres://USER:PASSWORD@HOST:PORT/NAME
DATABASE_URL=
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=hospital_db
DB_USER=postgres
DB_PASSWORD=postgres

# Redis / Cache
REDIS_URL=redis://127.0.0.1:6379/1
CACHE_URL=${REDIS_URL}
CACHE_TTL=86400
CACHE_KEY_PREFIX=hospital_mgmt
CACHE_SERIALIZER=json

# Payments (Chapa)
CHAPA_PUBLIC_KEY=CHAPUBK_live_xxx
CHAPA_SECRET_KEY=CHASECK_live_xxx
PAYMENT_RETURN_URL=https://your-domain.com/payments/return
DEFAULT_PAYMENT_EMAIL=payments@your-domain.com

# Security (optional)
CORS_ALLOWED_ORIGINS=https://your-frontend.com
CSRF_TRUSTED_ORIGINS=https://your-frontend.com


