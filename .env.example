# Django Core
DJANGO_SECRET_KEY=replace-with-strong-random-string
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-frontend.vercel.app

# Payments (Chapa)
CHAPA_PUBLIC_KEY=CHAPUBK_TEST-xxx
CHAPA_SECRET_KEY=CHASECK_TEST-xxx
DEFAULT_PAYMENT_EMAIL=your-email@example.com

# Frontend integration
FRONTEND_URL=https://your-frontend.vercel.app

# PostgreSQL (e.g. Neon)
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Redis (e.g. Upstash)
REDIS_URL=rediss://default:password@host:port
CACHE_TTL=86400
CACHE_KEY_PREFIX=hospital_mgmt
CACHE_SERIALIZER=json
